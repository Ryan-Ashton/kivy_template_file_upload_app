<InputPage>:
    name: "main"

    
    MDBoxLayout:
        orientation: "vertical"

        MDToolbar:
            title: "Upload File for Pre-Processing"

        
        MDBoxLayout:
            orientation: "vertical"
            padding: 20

            Widget:
                size_hint_y: None
                height: 100

            Image:
                source: "assets/upload.jpg"
                size_hint: 1, 1
                pos_hint: {"center_x": .5, "center_y": .5}
                keep_ratio: True


            MDLabel:
                text: "To Upload a File, click the button below"
                size_hint: .5, .5
                pos_hint: {"center_x": .5, "center_y": .5}
                halign: "center"    


        MDBoxLayout:
            orientation:"vertical"
            padding: 100

            MDRaisedButton:
                text: "Upload File"
                font_size: "18sp"
                size_hint: None, None
                pos_hint: {"center_x": .5, "center_y": .5}
                on_release: root.file_manager_open()


<OutputPage>:
    name: "output"

    MDBoxLayout:
        orientation: "vertical"

        MDLabel:
            text: "Now Processing"
            size_hint: 1, 1
            pos_hint: {"center_x": .5, "center_y": .5}
            halign: 'center'